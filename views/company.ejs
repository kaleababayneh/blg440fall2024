<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Company: <%= companyName %></title>
  <!-- Link to the CSS file -->
  <link rel="stylesheet" href="/blg440fall2024/css/company.css">
</head>
<body>
  <header class="header">
    <h1>Financial AI</h1>
    <form class="date-form" action="" method="get">
      <label for="date">  </label>
      <select name="Date" id="date" onchange="this.form.submit()">
        <% availableDates.forEach((date, index) => { %>
          <option value="<%= index %>" <%= date === selectedDate ? 'selected' : '' %>><%= date %></option>
        <% }) %>
      </select>
    </form>
  </header>
  
  <!-- Display General Information -->
  <section class="general-info">
    <h2>General Information</h2>
    <ul>
      <% for (const [key, value] of Object.entries(generalInfo)) { %>
        <li><strong><%= key %>:</strong> <%= value %></li>
      <% } %>
    </ul>
  </section>

  <!-- Display Financial Data -->
  <section class="financial-data">
    <h2>Financial Data for Date: <%= selectedDate %></h2>
    <ul>
      <% for (const [key, value] of Object.entries(financialData)) { %>
        <li><strong><%= key %>:</strong> <%= value %></li>
      <% } %>
    </ul>
  </section>
</body>
</html>